  <div class="grid gap-6 w-full grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mb-7">
    {page.data.map((event) => <EventCard event={event} />)}
  </div>
  <Pagination prev={page.url.prev} next={page.url.next} />
</EventLayout>
